{% extends 'template.html.twig' %}
{% set body = 'home1 product-category' %}

{% block stylesheet %}
    <style>
        .layer-category {
            max-width: 600px;
        }
    </style>
{% endblock %}

{% block content %}

    <div class="breadcrumbs">
        <div class="container">
            <div class="inner">
                <h1>Login</h1>
                <ul class="breadcrumb">
                    <li><a href="{{ path('homepage') }}">Home</a></li>
                    <li><a href="#">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div id="product-category" class="container layer-category">
        <div class="row">
            {% if error is defined %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="login-form-content">
                <form method="post">
                    <div class="form-group">
                        <label class="control-label" for="input-email">E-Mail Address</label>
                        <input type="text" name="_username" value="" placeholder="E-Mail Address" id="input-email"
                            class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="input-password">Password</label>
                        <input type="password" name="_password" value="" placeholder="Password" id="input-password"
                            class="form-control" required>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <a class="forgotten" href="#">Forgotten Password?</a>
                    </div>
                    <div class="action">
                        <button class="button" type="submit"><span>Login</span></button>
                        <a class="button" href="{{ path('register') }}"><span>Create an account</span></a>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}